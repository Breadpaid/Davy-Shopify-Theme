{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        { "value": "square", "label": "Square" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "landscape", "label": "Landscape" }
      ],
      "default": "square",
      "label": "Image ratio"
    }
  ],
  "presets": [{ "name": "Related Products" }]
}
{% endschema %}

<div id="section-{{ section.id }}" class="related-products">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% else %}
    <h2>{{ 'collections.related.heading' | t }}</h2>
  {% endif %}

  {%- assign current_product = product -%}
  {%- assign current_collection = product.collections.first -%}

  {% if current_collection %}
    <div class="products-grid">
      {% for related_product in current_collection.products limit: section.settings.products_to_show %}
        {% if related_product.id != current_product.id %}
          <div class="product-card">
            <a href="{{ related_product.url }}">
              <div class="product-card__image image-ratio--{{ section.settings.image_ratio }}">
                {% if related_product.featured_image != blank %}
                  {% assign rp_thumb_width = 400 %}
                  {% assign rp_thumb_height = rp_thumb_width
                    | divided_by: related_product.featured_image.aspect_ratio
                    | round
                  %}
                  {{
                    related_product.featured_image
                    | image_url: width: rp_thumb_width
                    | image_tag: loading: 'lazy', alt: related_product.featured_image.alt
                    | default: related_product.title,
                      width: rp_thumb_width,
                      height: rp_thumb_height,
                      sizes: '(max-width: 600px) 50vw, 400px',
                      widths: '200,300,400'
                  }}
                {% endif %}
              </div>

              <div class="product-card__info">
                <h3 class="product-card__title">{{ related_product.title }}</h3>
                <p class="product-card__price">{{ related_product.price | money }}</p>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  #section-{{ section.id }} .related-products {
    padding: 2rem 0;
  }

  #section-{{ section.id }} .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  #section-{{ section.id }} .product-card {
    position: relative;
  }

  #section-{{ section.id }} .product-card__image {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  #section-{{ section.id }} .image-ratio--square {
    padding-bottom: 100%;
  }

  #section-{{ section.id }} .image-ratio--portrait {
    padding-bottom: 125%;
  }

  #section-{{ section.id }} .image-ratio--landscape {
    padding-bottom: 75%;
  }

  #section-{{ section.id }} .product-card__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #section-{{ section.id }} .product-card__info {
    padding: 1rem 0;
  }

  #section-{{ section.id }} .product-card__title {
    margin: 0.5rem 0;
    font-size: 1rem;
  }

  #section-{{ section.id }} .product-card__price {
    font-weight: bold;
  }

  @media screen and (max-width: 768px) {
    #section-{{ section.id }} .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
{% endstylesheet %}
